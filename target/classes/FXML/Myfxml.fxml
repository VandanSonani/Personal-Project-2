<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="850.0" prefWidth="900.0" style="-fx-background-color: blue;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MyController">
   <VBox fx:id="root" alignment="CENTER" prefHeight="850.0" prefWidth="900.0" style="-fx-background-color: green; -fx-border-color: #006400; -fx-border-width: 100;">
      <Label alignment="CENTER" prefHeight="264.0" prefWidth="314.0" text="Welcome to 3-Card Poker" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Kannada MN" size="47.0" />
         </font>
         <padding>
            <Insets bottom="50.0" />
         </padding>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.296" green="1.0" blue="0.129" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Label>

      <Button fx:id="playGame" alignment="CENTER" contentDisplay="CENTER" prefHeight="51.0" prefWidth="180.0" style="-fx-background-color: #b5ffaa; -fx-text-fill: #000000; -fx-background-radius: 100;" text="Play" textAlignment="CENTER">
         <font>
            <Font name="Kannada MN" size="25.0" />
         </font>
         <VBox.margin>
            <Insets bottom="25.0" />
         </VBox.margin>
      </Button>

      <Button fx:id="exitGame" alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="180.0" style="-fx-background-color: #ff6aa0; -fx-border-width: 2; -fx-background-radius: 100;" text="Exit" textAlignment="CENTER" onAction = "#handleExit">
         <font>
            <Font name="Kefa Regular" size="25.0" />
         </font>
      </Button>
   </VBox>
</StackPane>
